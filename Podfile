# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'BoardSample' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for BoardSample

  # サーバー
  pod 'NCMB', :git => 'https://github.com/NIFCloud-mbaas/ncmb_ios.git'

  # ホームや人間のような小さいアイコンを文字列や画像のように簡単に使える
  pod 'FontAwesome.swift'

  # TableViewを引っ張ってぐるぐる
  pod 'KafkaRefresh'

  # 画面中央でぐるぐる
  pod 'MBProgressHUD'

  # サーバーからの画像の読み込みを簡単に
  pod 'Kingfisher'

  # TableViewの要素が空のときの表示
  pod 'DZNEmptyDataSet'

  # TextFieldがキーボードで隠れないように勝手に画面を動かしてくれる
  pod 'IQKeyboardManager'

end
